{
    "name": "Shopify assistant",
    "manifest_version": 3,
    "version": "0.1",
    "description": "Helps to see more details about Shopify pages",
    "permissions": [
        "storage",
        "webNavigation",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*.myshopify.com/"
    ],
    "action": {
        "default_title": "Shopify assistant",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}