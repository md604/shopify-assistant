{
    "name": "Shopify Assistant",
    "manifest_version": 3,
    "version": "0.1",
    "description": "Shopify theme manager and performance inspector",
    "author": "Maxim Dyuzhinov",
    "homepage_url": "https://github.com/md604/shopify-assistant",
    "permissions": [
        "storage",
        "webNavigation",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*.myshopify.com/"
    ],
    "action": {
        "default_title": "Shopify assistant",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
       "128": "icon128.png" 
    }
}